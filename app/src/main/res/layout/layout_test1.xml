<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_elastic"
        android:text="scrollLayout"
        android:background="#3a4988"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_drag"
        android:text="dragview"
        android:background="#009988"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_load_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载提示动画"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btn_tab_recyc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="recyc+tab"/>

        <Button
            android:id="@+id/btn_file_down_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="r文件上传下载"/>

        <Button
            android:id="@+id/btn_boom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="爆炸效果"/>
    </LinearLayout>

</LinearLayout>